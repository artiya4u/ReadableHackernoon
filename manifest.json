{
  "manifest_version": 2,
  "name": "Readable Hackernoon",
  "description": "Remove the big colorful header from Hackernoon for more readable",
  "version": "0.0.3",
  "icons": {
    "128": "icon.png" 
  },
  "permissions": [
    "storage",
    "https://hackernoon.com/",
    "https://www.hackernoon.com/"
  ],
  "content_scripts": [
    {
      "matches": ["https://hackernoon.com/*", "https://www.hackernoon.com/*"],
      "js": ["content.js"],
      "exclude_matches": ["https://hackernoon.com/", "https://www.hackernoon.com/"]
    }
  ],
  "web_accessible_resources": [
    "inject.css"
  ]
}
